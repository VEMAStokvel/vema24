rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user owns this file
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Validate image file type
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Validate document file type
    function isDocument() {
      return request.resource.contentType in [
        'application/pdf',
        'application/msword',
        'application/vnd.openxmlformats-officedocument.wordprocessingml.document',
        'image/jpeg',
        'image/jpg',
        'image/png'
      ];
    }
    
    // Validate file size (max 5MB for images)
    function isValidImageSize() {
      return request.resource.size <= 5 * 1024 * 1024; // 5MB
    }
    
    // Validate file size (max 10MB for documents)
    function isValidDocumentSize() {
      return request.resource.size <= 10 * 1024 * 1024; // 10MB
    }
    
    // Check if user has admin claim (set via Firebase Auth custom claims)
    function isAdmin() {
      return isSignedIn() && 
             request.auth.token.admin == true;
    }
    
    // ============================================
    // USER PROFILE PICTURES
    // ============================================
    match /users/{userId}/profile/{fileName} {
      // Read: Anyone authenticated can view profile pictures
      allow read: if isSignedIn();
      
      // Write: Only the user can upload their own profile picture
      allow write: if isOwner(userId) && 
                     isImage() && 
                     isValidImageSize();
      
      // Delete: Only owner can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // IDENTITY DOCUMENTS
    // ============================================
    match /users/{userId}/documents/id/{fileName} {
      // Read: Only owner can view ID documents
      allow read: if isOwner(userId);
      
      // Write: Only owner can upload ID documents
      allow write: if isOwner(userId) && 
                     isDocument() && 
                     isValidDocumentSize();
      
      // Delete: Only owner can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // PROOF OF ADDRESS
    // ============================================
    match /users/{userId}/documents/proof-of-address/{fileName} {
      // Read: Only owner can view
      allow read: if isOwner(userId);
      
      // Write: Only owner can upload
      allow write: if isOwner(userId) && 
                     isDocument() && 
                     isValidDocumentSize();
      
      // Delete: Only owner can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // BANK STATEMENTS
    // ============================================
    match /users/{userId}/documents/bank-statements/{fileName} {
      // Read: Only owner can view
      allow read: if isOwner(userId);
      
      // Write: Only owner can upload
      allow write: if isOwner(userId) && 
                     isDocument() && 
                     isValidDocumentSize();
      
      // Delete: Only owner can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // FUNERAL CLAIM DOCUMENTS
    // ============================================
    match /funeralClaims/{claimId}/documents/{userId}/{fileName} {
      // Read: Only the uploader can view
      allow read: if isOwner(userId);
      
      // Write: Only the user can upload claim documents
      allow write: if isOwner(userId) && 
                     isDocument() && 
                     isValidDocumentSize();
      
      // Delete: Only the uploader can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // LOAN APPLICATION DOCUMENTS
    // ============================================
    match /loans/{loanId}/documents/{userId}/{fileName} {
      // Read: Only the uploader can view
      allow read: if isOwner(userId);
      
      // Write: Only the user can upload loan documents
      allow write: if isOwner(userId) && 
                     isDocument() && 
                     isValidDocumentSize();
      
      // Delete: Only the uploader can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // PRODUCT IMAGES (Admin uploads via server/admin SDK)
    // ============================================
    match /products/{productId}/images/{fileName} {
      // Read: All authenticated users can view product images
      allow read: if isSignedIn();
      
      // Write/Delete: Only via admin SDK (no direct client uploads)
      allow write, delete: if false;
    }
    
    // ============================================
    // STOKVEL DOCUMENTS (Admin managed)
    // ============================================
    match /stokvels/{stokvelId}/documents/{fileName} {
      // Read: All authenticated users can read stokvel documents
      allow read: if isSignedIn();
      
      // Write/Delete: Only via admin SDK
      allow write, delete: if false;
    }
    
    // ============================================
    // PUBLIC ASSETS (Constitutions, Terms, etc.)
    // ============================================
    match /public/{fileName} {
      // Read: All authenticated users can read public files
      allow read: if isSignedIn();
      
      // Write/Delete: Only via admin SDK
      allow write, delete: if false;
    }
    
    // ============================================
    // RECEIPTS (Generated by backend)
    // ============================================
    match /receipts/{userId}/{receiptId}/{fileName} {
      // Read: Only owner can view receipts
      allow read: if isOwner(userId);
      
      // Write: Only via admin SDK/backend
      allow write: if false;
      
      // Delete: Not allowed
      allow delete: if false;
    }
    
    // ============================================
    // CONTRIBUTION RECEIPTS (Generated by backend)
    // ============================================
    match /contributions/{contributionId}/receipt/{fileName} {
      // Read: All authenticated users can view their contribution receipts
      // (userId should be part of filename or checked via custom token)
      allow read: if isSignedIn();
      
      // Write: Only via admin SDK/backend
      allow write: if false;
      
      // Delete: Not allowed
      allow delete: if false;
    }
    
    // ============================================
    // TEMPORARY UPLOADS
    // ============================================
    match /temp/{userId}/{fileName} {
      // Read: Only owner can read temp files
      allow read: if isOwner(userId);
      
      // Write: Only owner can upload to temp (max 10MB)
      allow write: if isOwner(userId) && 
                     request.resource.size <= 10 * 1024 * 1024;
      
      // Delete: Only owner can delete temp files
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // ADMIN DOCUMENTS
    // ============================================
    match /admin/{document=**} {
      // Only users with admin custom claim can access
      allow read, write, delete: if isAdmin();
    }
    
    // ============================================
    // DEFAULT DENY ALL
    // ============================================
    // Any other path not explicitly allowed is denied
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}